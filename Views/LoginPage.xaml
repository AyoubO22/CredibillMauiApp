<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:CredibillMauiApp.Converters"
             x:Class="CredibillMauiApp.Views.LoginPage"
             Title="Connexion">
    <ContentPage.Resources>
        <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    </ContentPage.Resources>
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Connexion" FontSize="32" HorizontalOptions="Center" />
        <Entry Placeholder="Nom d'utilisateur" Text="{Binding Username}" />
        <Entry Placeholder="Mot de passe" IsPassword="True" Text="{Binding Password}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        <Button Text="Se connecter" Command="{Binding LoginCommand}" />
    </VerticalStackLayout>
</ContentPage>
