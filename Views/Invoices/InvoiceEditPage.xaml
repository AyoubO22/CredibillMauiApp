<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredibillMauiApp.Views.Invoices.InvoiceEditPage"
             Title="Edit Invoice">
    <StackLayout Padding="20" Spacing="10">
        <Picker Title="Customer" ItemsSource="{Binding Customers}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedCustomer}" />
        <Entry Text="{Binding Invoice.Amount}" Placeholder="Amount" Keyboard="Numeric"/>
        <Button Text="Save" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>
