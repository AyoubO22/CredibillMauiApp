<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredibillMauiApp.Views.AuthChoicePage"
             Title="Welcome">
    <VerticalStackLayout Padding="24" Spacing="16" VerticalOptions="Center">
        <Label Text="Welcome to Credibill" Style="{StaticResource TitleLargeStyle}" HorizontalOptions="Center" />
        <Border Style="{StaticResource CardBorderStyle}">
            <VerticalStackLayout Spacing="10">
                <Button Text="Log in" Clicked="OnLoginClicked" Style="{StaticResource PrimaryActionButton}" />
                <Button Text="Sign up" Clicked="OnRegisterClicked" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>
