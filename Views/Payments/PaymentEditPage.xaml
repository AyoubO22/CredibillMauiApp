<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredibillMauiApp.Views.Payments.PaymentEditPage"
             Title="Edit Payment">
    <StackLayout Padding="20" Spacing="10">
        <Picker Title="Invoice" ItemsSource="{Binding Invoices}" ItemDisplayBinding="{Binding Id}" SelectedItem="{Binding SelectedInvoice}" />
        <Entry Text="{Binding Payment.Reference}" Placeholder="Reference"/>
        <Entry Text="{Binding Payment.Amount}" Placeholder="Amount" Keyboard="Numeric"/>
        <Button Text="Save" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>
