<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredibillMauiApp.Views.Payments.PaymentsDetailPage">
    <StackLayout Padding="20">
        <Label Text="Payment Details" FontSize="Large" FontAttributes="Bold" />
        <Label Text="Reference:" FontAttributes="Bold" />
        <Label Text="{Binding Reference}" />
        <Label Text="Amount:" FontAttributes="Bold" />
        <Label Text="{Binding Amount}" />
        <Label Text="Date:" FontAttributes="Bold" />
        <Label Text="{Binding DatePaid, StringFormat='dd/MM/yyyy'}" />
    </StackLayout>
</ContentPage>
